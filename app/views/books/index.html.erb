<%= render 'books/list', book: @book, user: @user %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th><h3>Title</h3></th>
      <th><h3>Opinion</h3></th>
    </tr>
  </thead>

<tbody>
  <% @books.each do |book| %>
  <tr>
    <th><%= image_tag @user.get_profile_image(100,100) %></th>
    <td><%= link_to book.title, book_path(book.id) %></td>
  　<td><%= book.body %></td>
  　<th></th>
  </tr>
  <% end %>
</tbody>
</table>

